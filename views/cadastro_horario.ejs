<%- include('partials/header') %>

<div class="row justify-content-center">
  <div class="col-lg-6 col-xl-5">
    <div class="card shadow">
      <div class="card-body">
        <h2 class="mb-4 text-center">Cadastrar Horário Padrão</h2>

        <form method="POST" action="/horarios/novo" class="row g-3" id="formHorario" onsubmit="return validarHorarios()">
          <div class="col-12">
            <label for="descricao" class="form-label">Descrição</label>
            <input type="text" id="descricao" name="descricao" class="form-control" placeholder="Ex: Expediente padrão" required>
          </div>

          <div class="col-12">
            <label for="dia_da_semana" class="form-label">Dia da Semana</label>
            <select name="dia_da_semana" id="dia_da_semana" class="form-select" required>
              <option value="segunda">Segunda</option>
              <option value="terca">Terça</option>
              <option value="quarta">Quarta</option>
              <option value="quinta">Quinta</option>
              <option value="sexta">Sexta</option>
              <option value="sabado">Sábado</option>
            </select>
          </div>

          <!-- Linha 1: Entrada / Saída -->
          <div class="col-md-6">
            <label for="entrada" class="form-label">Entrada 1º Turno</label>
            <input name="entrada" id="entrada" type="time" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label for="saida_intervalo" class="form-label">Saída 1º Turno</label>
            <input name="saida_intervalo" id="saida_intervalo" type="time" class="form-control" required>
          </div>

          <!-- Intervalos (fica oculto aos sábados) -->
          <div id="intervalos" class="row g-3">
            <div class="col-md-6">
              <label for="retorno_intervalo" class="form-label">Entrada 2º Turno</label>
              <input name="retorno_intervalo" id="retorno_intervalo" type="time" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label for="saida" class="form-label">Saída 2º Turno</label>
              <input name="saida" id="saida" type="time" class="form-control" required>
            </div>
          </div>

          <div class="col-12 mt-2">
            <button type="submit" class="btn btn-success w-100">Cadastrar</button>
            <a href="/horarios" class="btn btn-secondary w-100 mt-2">← Voltar</a>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>

<script>
  (function () {
    const diaSelect = document.getElementById('dia_da_semana');
    const intervalos = document.getElementById('intervalos');
    const saidaIntervalo = document.getElementById('saida_intervalo');
    const retornoIntervalo = document.getElementById('retorno_intervalo');
    const entrada = document.getElementById('entrada');
    const saida = document.getElementById('saida');

    function ajustarCampos() {
      const isSabado = diaSelect.value === 'sabado';
      if (isSabado) {
        intervalos.style.display = 'none';
        saida.removeAttribute('required');
        retornoIntervalo.removeAttribute('required');
        // limpa valores para evitar confusão
        saida.value = '';
        retornoIntervalo.value = '';
      } else {
        intervalos.style.display = '';
        saida.setAttribute('required', 'required');
        retornoIntervalo.setAttribute('required', 'required');
      }
    }

    // Validação simples: entrada < saida; se houver intervalo, saída_intervalo < retorno_intervalo e intervalo dentro da jornada
    window.validarHorarios = function validarHorarios() {
      const e = entrada.value;
      const s = saida.value;
      const si = saidaIntervalo.value;
      const ri = retornoIntervalo.value;
      const isSabado = diaSelect.value === 'sabado';

      const toMin = (hhmm) => {
        if (!hhmm) return null;
        const [h, m] = hhmm.split(':').map(Number);
        return h * 60 + m;
        };

      const me = toMin(e), ms = toMin(s), msi = toMin(si), mri = toMin(ri);

      if (me == null || msi == null) {
        alert('Preencha horários de Entrada 1º Turno e Saída 1º Turno.');
        return false;
      }
      if (me >= msi) {
        alert('A Saída deve ser maior que a Entrada.');
        return false;
      }

      if (!isSabado) {
        if (msi == null || mri == null) {
          alert('Preencha Saída e Retorno do intervalos ou selecione Sábado.');
          return false;
        }
        if (msi >= mri) {
          alert('O Retorno do intervalo deve ser maior que a Saída para intervalo.');
          return false;
        }
        if (!(me < msi && mri < ms)) {
          alert('O intervalo deve acontecer dentro da jornada (entre Entrada e Saída).');
          return false;
        }
      }
      return true;
    };

    diaSelect.addEventListener('change', ajustarCampos);
    ajustarCampos(); // inicializa de acordo com a seleção
  })();
</script>

