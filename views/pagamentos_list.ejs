<%- include('partials/header') %>

<h2 class="mb-3">Pagamentos de Extras</h2>

<!-- Filtros -->
<form method="GET" action="/pagamentos" class="row g-3 mb-4">
  <div class="col-md-4">
    <label class="form-label">Funcionário</label>
    <select name="id_funcionario" class="form-select">
      <option value="">Todos</option>
      <% funcionarios.forEach(f => { %>
        <option value="<%= f.id %>" <%= String(filtros.id_funcionario)===String(f.id) ? 'selected' : '' %>>
          <%= f.nome %>
        </option>
      <% }) %>
    </select>
  </div>

  <div class="col-md-3">
    <label class="form-label">De (competência)</label>
    <input type="month" name="data_inicio" value="<%= filtros.data_inicio || '' %>" class="form-control">
  </div>

  <div class="col-md-3">
    <label class="form-label">Até (competência)</label>
    <input type="month" name="data_fim" value="<%= filtros.data_fim || '' %>" class="form-control">
  </div>

  <div class="col-md-2 d-flex align-items-end gap-2">
    <button class="btn btn-primary w-100"><i class="bi bi-funnel"></i> Filtrar</button>
    <a href="/pagamentos" class="btn btn-outline-secondary w-100"><i class="bi bi-recycle"></i> Limpar</a>
  </div>
</form>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h5 class="mb-0">Resultados</h5>
  <a href="/pagamentos/novo" class="btn btn-success"><i class="bi bi-database-add"></i> Cadastrar</a>
</div>

<% if (pagamentos && pagamentos.length) { %>
  <div class="table-responsive">
    <table class="table table-bordered table-hover align-middle text-center">
      <thead class="table-dark">
        <tr>
          <th>Funcionário</th>
          <th>Competência</th>
          <th>Valor Pago</th>
          <th>Obs</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% pagamentos.forEach(p => { %>
          <tr>
            <td class="text-start"><%= p.funcionario %></td>
            <td><%= p.competencia_br %></td>
            <td>R$ <%= Number(p.valor_pago).toLocaleString('pt-BR',{minimumFractionDigits:2}) %></td>
            <td class="text-start"><%= p.obs || '-' %></td>
            <td>
              <a href="/pagamentos/editar/<%= p.id %>" class="btn btn-sm btn-primary me-2"><i class="bi bi-database-gear"></i> Editar</a>

              <!-- Botão abre modal -->
              <button type="button" class="btn btn-sm btn-danger"
                      data-bs-toggle="modal" data-bs-target="#modalExcluir<%= p.id %>">
                <i class="bi bi-database-x"></i> Excluir
              </button>

              <!-- Modal de confirmação -->
              <div class="modal fade" id="modalExcluir<%= p.id %>" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                      <h5 class="modal-title">Confirmar Exclusão</h5>
                      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                      Excluir pagamento de <strong><%= p.funcionario %></strong> - competência <strong><%= p.competencia_br %></strong>?
                    </div>
                    <div class="modal-footer">
                      <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                      <form method="POST" action="/pagamentos/excluir/<%= p.id %>" class="d-inline">
                        <button type="submit" class="btn btn-danger">Sim, excluir</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>

            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
<% } else { %>
  <div class="alert alert-warning">Nenhum lançamento encontrado.</div>
<% } %>

<%- include('partials/footer') %>
