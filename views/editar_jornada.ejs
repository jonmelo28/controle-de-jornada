<%- include('partials/header') %>

<div class="row justify-content-center">
  <div class="col-lg-6 col-xl-5">
    <div class="card shadow">
      <div class="card-body">
        <h2 class="mb-1 text-center">Editar Jornada</h2>
        <p class="text-center text-muted mb-4"><strong><%= jornada.nome_funcionario %></strong></p>

        <form method="POST" action="/jornada/editar/<%= jornada.id %>" class="row g-3">

          <!-- Primeira linha: Entrada e Saída Intervalo -->
          <div class="col-md-6">
            <label for="entrada" class="form-label">Entrada 1º Turno</label>
            <input type="time" id="entrada" name="entrada" class="form-control" value="<%= jornada.entrada %>" required>
          </div>
          <div class="col-md-6">
            <label for="saida_intervalo" class="form-label">Saída 1º Turno</label>
            <input type="time" id="saida_intervalo" name="saida_intervalo" class="form-control" value="<%= jornada.saida_intervalo %>">
          </div>

          <!-- Segunda linha: Retorno Intervalo e Saída -->
          <div class="col-md-6">
            <label for="retorno_intervalo" class="form-label">Entrada 2º Turno</label>
            <input type="time" id="retorno_intervalo" name="retorno_intervalo" class="form-control" value="<%= jornada.retorno_intervalo %>">
          </div>
          <div class="col-md-6">
            <label for="saida" class="form-label">Saída 2º Turno</label>
            <input type="time" id="saida" name="saida" class="form-control" value="<%= jornada.saida %>" required>
          </div>

          <!-- Botões -->
          <div class="col-12 mt-3">
            <button type="submit" class="btn btn-success w-100">Salvar Alterações</button>
            <a href="/jornada/relatorio" class="btn btn-secondary w-100 mt-2">← Voltar</a>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
