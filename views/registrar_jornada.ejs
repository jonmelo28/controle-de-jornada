<%- include('partials/header') %>

<div class="row justify-content-center">
  <div class="col-lg-8 col-xl-7">
    <div class="card shadow">
      <div class="card-body">
        <h2 class="mb-4 text-center">Registrar Jornada</h2>

        <form method="POST" action="/jornada/registrar" class="row g-3">

          <!-- Funcionário -->
          <div class="col-12">
            <label for="id_funcionario" class="form-label">Funcionário</label>
            <select name="id_funcionario" id="id_funcionario" class="form-select" required>
              <option value="">Selecione</option>
              <% funcionarios.forEach(f => { %>
                <option value="<%= f.id %>"><%= f.nome %></option>
              <% }) %>
            </select>
          </div>

          <!-- Data -->
          <div class="col-md-4">
            <label for="data" class="form-label">Data</label>
            <input name="data" id="data" type="date" class="form-control" required>
          </div>

          <!-- Entrada -->
          <div class="col-md-4">
            <label for="entrada" class="form-label">Entrada 1º Turno</label>
            <input name="entrada" id="entrada" type="time" class="form-control">
          </div>
           <div class="col-md-4">
                <label for="saida_intervalo" class="form-label">Saída 1º Turno</label>
                <input name="saida_intervalo" id="saida_intervalo" type="time" class="form-control">
           </div>  

          <!-- Intervalos -->
          <div class="col-12">
            <div class="row g-3">
               <div class="col-md-6">
                <label for="retorno_intervalo" class="form-label">Entrada 2º Turno</label>
                <input name="retorno_intervalo" id="retorno_intervalo" type="time" class="form-control">
                <div class="form-text">Opcional</div>           
            </div>
               <!-- Saída -->
               <div class="col-md-6">
                 <label for="saida" class="form-label">Saída 2º Turno</label>
                 <input name="saida" id="saida" type="time" class="form-control">
                 <div class="form-text">Opcional</div>
               </div>
            </div>
          </div>
          
          <!-- Ações -->
          <div class="col-12 mt-3">
            <button type="submit" class="btn btn-success w-100">Registrar Jornada</button>
            <a href="/jornada/relatorio" class="btn btn-secondary w-100 mt-2">← Voltar</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
